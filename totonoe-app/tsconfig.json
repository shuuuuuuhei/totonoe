{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  // exclude を明示的に指定
  "exclude": ["node_modules", "dist"]
}